{
  "name": "astro-micropub",
  "version": "0.1.0",
  "description": "A production-ready Micropub resource server integration for Astro",
  "type": "module",
  "exports": {
    ".": "./dist/integration.js",
    "./storage": "./dist/storage/index.js",
    "./types": "./dist/types/index.js"
  },
  "types": "./dist/integration.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "astro",
    "astro-integration",
    "micropub",
    "indieweb",
    "indieauth"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "astro-integration-kit": "^0.19.1",
    "busboy": "^1.6.0",
    "gray-matter": "^4.0.3",
    "slugify": "^1.6.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/node": "^25.0.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "astro": "^5.16.9",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/astro-micropub.git"
  }
}
